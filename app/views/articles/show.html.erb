<div class="container text-align-center">
  <div class="card align-middle m-3 w-100" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @article.title %></h5>
      <p class="card-text"><%= @article.content %></p>
      <div class="button-container d-flex justify-content-between">
        <%= link_to "Edit", edit_article_path(@article), :class => 'navbar-brand btn btn-primary' %>
        <%= link_to "Delete", articles_path, :class => 'navbar-brand btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
